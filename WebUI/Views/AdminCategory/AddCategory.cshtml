@using EntityLayer.Concrete
@model Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2>Kategori Ekle</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a class="dropdown-item" href="#">Settings 1</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                @using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
                {
                    <div class="item form-group">
                        @Html.LabelFor(x=>x.CategoryName,new { @class= "col-form-label col-md-3 col-sm-3 label-align" })
                        <div class="col-md-6 col-sm-6 ">
                       @Html.TextBoxFor(x=>x.CategoryName, new { @class = "form-control" })
                       @Html.ValidationMessageFor(x=>x.CategoryName)
                        </div>
                    </div>
                    <div class="item form-group">
                        @Html.LabelFor(x => x.CategoryDescription, new { @class = "col-form-label col-md-3 col-sm-3 label-align" })
                        <div class="col-md-6 col-sm-6 ">
                            @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.CategoryDescription)
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="item form-group">
                        <div class="col-md-6 col-sm-6 offset-md-3">
                            <button type="submit" class="btn btn-success">Kaydet</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

