@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 col-sm-12  ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Kategori Listesi</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="#">Settings 1</a>
                        <a class="dropdown-item" href="#">Settings 2</a>
                    </div>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Yazılar</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.HeadingId</th>
                            <td>@item.HeadingName</td>
                            <td>@item.Category.CategoryName</td>
                            <td><a href="/AdminHeading/UpdateWriter/@item.WriterId" class="btn btn-outline-success btn-sm">Yazılar</a></td>
                            <td><a href="/AdminHeading/UpdateWriter/@item.WriterId" class="btn btn-outline-success btn-sm">Güncelle</a></td>
                            <td><a href="/AdminWriter/WriterDelete/@item.WriterId" class="btn btn-outline-danger btn-sm">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/AdminHeading/AddHeading" class="btn btn-outline-secondary">Yeni Başlık Ekle</a>
        </div>
    </div>
</div>